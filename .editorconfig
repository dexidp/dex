root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.proto]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[{config.yaml.dist,config.dev.yaml}]
indent_size = 2

[.golangci.yaml]
indent_size = 2

[devenv.yaml]
indent_size = 2

[*.nix]
indent_size = 2

[dagger.json]
indent_size = 2
